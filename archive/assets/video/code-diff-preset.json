{
  "name": "Laika Media Code Diff",
  "type": "dark",
  "colors": {
    "editor.background": "#1e1e1e",
    "editor.foreground": "#d4d4d4",
    "activityBarBadge.background": "#007acc",
    "sideBarTitle.foreground": "#bbbbbb"
  },
  "tokenColors": [
    {
      "name": "Diff Addition",
      "scope": ["markup.inserted", "markup.inserted.diff"],
      "settings": {
        "foreground": "#C8FACC",
        "background": "#093"
      }
    },
    {
      "name": "Diff Deletion", 
      "scope": ["markup.deleted", "markup.deleted.diff"],
      "settings": {
        "foreground": "#FECACA",
        "background": "#600"
      }
    },
    {
      "name": "Diff Context",
      "scope": ["markup.changed", "markup.changed.diff"],
      "settings": {
        "foreground": "#a1a1aa",
        "background": "#121212"
      }
    },
    {
      "name": "Diff Header",
      "scope": ["meta.diff.header"],
      "settings": {
        "foreground": "#00E7FF",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Diff Index",
      "scope": ["meta.diff.index"],
      "settings": {
        "foreground": "#FF2D95",
        "fontStyle": "italic"
      }
    }
  ]
} 